{
  "name": "learn-programming-javascript",
  "version": "1.0.0",
  "description": "Learn the fundamentals of JavaScript, the programming language of the web.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:lesson": "jest --testPathPattern"
  },
  "keywords": ["javascript", "learning", "programming", "tutorial"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/_test/**/*.test.js",
      "**/__tests__/**/*.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/_test/**",
      "!**/_solution/**",
      "!**/node_modules/**",
      "!coverage/**"
    ]
  }
}
